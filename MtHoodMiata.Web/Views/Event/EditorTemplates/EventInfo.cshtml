@model EventInfo
<script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    $(document).ready(init);

    function init() {
        CKEDITOR.replace("EventDetails");
        $(".datePicker").datepicker({
            changeMonth: true,
            changeYear: true
        });
        $("#EventName").focus();
    }
</script>
<table style="padding: 2px; border-spacing: 2px; width: 100%; border: 0px">
    <tr>
        <td style="width: 25%">
            @Html.LabelFor( model => model.EventName, "Event Name:" )
        </td>
        <td style="width: 75%">
            @Html.TextBoxFor( model => model.EventName, new { maxlength = "65", style = "width: 350px" } )
        </td>
    </tr>
    <tr>
        <td style="width: 25%">
            @Html.LabelFor( model => model.Planner, "Planner:" )
        </td>
        <td style="width: 75%">
            @Html.TextBoxFor( model => model.Planner, new { maxlength = 65, style = "width: 350px" } )
        </td>
    </tr>
    <tr>
        <td style="width: 25%">
            @Html.LabelFor( model => model.StartDate, "Start Date:" )
        </td>
        <td style="width: 75%">
            @Html.EditorFor( model => model.StartDate )
        </td>
    </tr>
    <tr>
        <td style="width: 25%">
            @Html.LabelFor( model => model.EndDate, "End Date:" )
        </td>
        <td style="width: 75%">
            @Html.EditorFor( model => model.EndDate )
        </td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.TextAreaFor( model => model.EventDetails )
        </td>
    </tr>
    <tr>
        <td style="text-align: center" colspan="2">
            <button type="submit">
                Save</button>
            <button type="button" onclick="window.location.href='/Event/List?sortdir=DESC'">
                Cancel</button>
        </td>
    </tr>
</table>
